<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/const_news_detail"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".layout.detail.DetailNewsActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_news_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="@id/const_news_detail"
        app:layout_constraintStart_toStartOf="@id/const_news_detail"
        app:layout_constraintEnd_toEndOf="@id/const_news_detail"
        app:layout_constraintBottom_toTopOf="@id/txt_news_detail_title"/>
    
    <TextView
        android:id="@+id/txt_news_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="@string/title_news_detail"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/Black"
        app:layout_constraintTop_toBottomOf="@id/img_news_detail"
        app:layout_constraintStart_toStartOf="@id/img_news_detail"
        app:layout_constraintEnd_toEndOf="@id/img_news_detail"
        app:layout_constraintBottom_toTopOf="@+id/txt_news_detail_author"/>

    <TextView
        android:id="@+id/txt_news_detail_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/author_news_detail"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/txt_news_detail_title"
        app:layout_constraintStart_toStartOf="@id/txt_news_detail_title"
        app:layout_constraintEnd_toEndOf="@id/txt_news_detail_title"
        app:layout_constraintBottom_toTopOf="@id/txt_news_detail_desc"/>

    <TextView
        android:id="@+id/txt_news_detail_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/desc_news_detail"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="@color/Black"
        app:layout_constraintTop_toBottomOf="@id/txt_news_detail_author"
        app:layout_constraintStart_toStartOf="@id/txt_news_detail_author"
        app:layout_constraintEnd_toEndOf="@id/txt_news_detail_author"
        app:layout_constraintBottom_toTopOf="@+id/txt_news_detail_date"/>

    <TextView
        android:id="@+id/txt_news_detail_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:layout_marginTop="30dp"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/txt_news_detail_desc"
        app:layout_constraintStart_toStartOf="@id/txt_news_detail_desc"
        app:layout_constraintEnd_toEndOf="@id/txt_news_detail_desc"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>